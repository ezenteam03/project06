<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >	
	
<mapper namespace="project06.repository.MeetDao">

	<resultMap type="meet" id="meetResult"/>

 	<select id="totCnt" resultType="int" parameterType="msch">
 		select count(*) 
		from pmsmeeting
		where 1=1
		<if test="topic!=null and topic!=''">
		and topic like '%'||#{topic}||'%'
		</if>
	</select> 


	
 	<select id="list" resultMap="meetResult" parameterType="msch" >
 		SELECT * 
		FROM(
			SELECT rownum cnt, mnno,topic,detail,decision,etc,views,wdate,chdate,mdate,loc,people,mndiv,m.name writer,pno 
			FROM pmsmeeting p, pmsemp m 
			WHERE 1=1 AND p.mno=m.eno 
			<if test="topic!=null and topic!=''">
			and topic like '%'||#{topic}||'%'
			</if>
			ORDER BY mnno DESC) 
		WHERE cnt BETWEEN #{start} AND #{end}
 	</select>
 	
 	
 	<insert id="insert" parameterType="meet">
	 	insert into pmsmeeting values(pmsmeeting_seq.nextval,#{topic},#{detail},#{decision},null,0,sysdate,null,sysdate,#{loc},#{people},0,10000017,1001);
 	</insert>
 	
 	
	<select id="getMeet" 
 		resultType="meet" parameterType="int">
 		SELECT *
 		FROM pmsmeeting
 		WHERE mnno = #{mnno}
 	</select>
 	
 	<update id="uptReadCnt" parameterType="int">
 		UPDATE pmsmeeting
 		   SET views = views+1
 		 WHERE mnno = #{mnno}
 	</update>
 	
 	<update id="updateMeet" parameterType="meet">
		UPDATE pmsmeeting
		   SET topic = #{topic},
		   	   detail = #{detail},
		   	   decision = #{decision},
		   	   etc = #{etc},
		   	   a.mno=m.eno = #{a.mno=m.eno},
		   	   chdate = sysdate
		   	 
		 WHERE mnno = #{mnno}
 	</update> 

  	<delete id="deleteMeet" parameterType="int">
		DELETE FROM pmsmeeting
		 WHERE mnno = #{mnno}
 	</delete> 	
  	
  	
